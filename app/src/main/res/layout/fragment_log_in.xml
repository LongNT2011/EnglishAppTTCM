<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/log_in"
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_log_in"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
        android:hint="@string/email"
        app:counterMaxLength="20"
        app:counterEnabled="true"
        app:endIconMode="clear_text"
        app:boxStrokeColor="@color/white"
        app:boxStrokeErrorColor="@color/red"
        android:id="@+id/layout_edt_email"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="56dp"
        android:layout_below="@id/iv_log_in">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/edt_email"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
        android:hint="@string/password"
        app:counterMaxLength="20"
        app:counterEnabled="true"
        app:endIconMode="clear_text"
        app:boxStrokeColor="@color/white"
        app:boxStrokeErrorColor="@color/red"
        android:id="@+id/layout_edt_password"
        android:layout_below="@id/layout_edt_email"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:id="@+id/edt_password" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_marginBottom="25dp"
        app:cardCornerRadius="10dp"
        android:layout_below="@id/layout_edt_password"
        android:id="@+id/btn_log_in"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log_in"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                android:id="@+id/tv_win_count" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/btn_log_in"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_accounted"/>

        <TextView
            android:id="@+id/sign_up_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up_now"
            android:layout_marginStart="5dp"
            android:textSize="16sp"
            android:textColor="@color/red"/>

    </LinearLayout>

</RelativeLayout>